  "proxy": "http://localhost:5000/",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && npm run compile",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prettier": "prettier --parser typescript --config package.json --write '**/*.ts*'",
    "compile:server": "tsc -p tsconfig-server.json",
    "compile:cypress": "tsc --project cypress",
    "compile": "concurrently \"npm run compile:server\" \"npm run compile:cypress\"",
    "server": "node_modules/nodemon/bin/nodemon.js build/server/server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run start\"",
    "cypress:open": "cypress open",
    "heroku": "node build/server/server.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "cypress": "^4.10.0",
    "husky": "^4.2.3",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1"
  },
  "prettier": {
    "tabWidth": 4,
    "singleQuote": true,
    "endOfLine": "lf",
    "overrides": [
