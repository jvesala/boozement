{
  "name": "boozement",
  "version": "1.0.0",
  "private": true,
  "proxy": "http://localhost:5005/",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && npm run compile",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prettier": "prettier --parser typescript --config package.json --write '**/*.ts*'",
    "compile:webpack": "webpack --config webpack.config.js",
    "compile:server": "tsc -p tsconfig-server.json",
    "compile": "concurrently \"npm run compile:webpack\" \"npm run compile:server\"",
    "server": "nodemon build/server/main.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run start\"",
    "flyio": "node build/server/main.js"
  },
  "engines": {
    "node": ">=18.12.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.4.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "fp-ts": "^2.7.0",
    "io-ts": "^2.2.7",
    "js-cookie": "^3.0.0",
    "luxon": "^3.1.1",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "pg-promise": "^10.5.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.6.1",
    "react-scripts": "^5.0.1",
    "redux": "^4.0.5",
    "superagent": "^8.0.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.7",
    "@types/express-session": "^1.17.0",
    "@types/jest": "^29.2.4",
    "@types/js-cookie": "^3.0.2",
    "@types/luxon": "^3.1.0",
    "@types/node": "^22.15.17",
    "@types/passport": "^1.0.7",
    "@types/passport-local": "^1.0.34",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.2",
    "@types/react-redux": "^7.1.24",
    "@types/react-router-dom": "^5.3.3",
    "concurrently": "^7.6.0",
    "css-loader": "^6.7.3",
    "file-loader": "^6.0.0",
    "husky": "^8.0.2",
    "nodemon": "^2.0.4",
    "prettier": "^3.5.3",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack-cli": "^5.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "prettier": {
    "singleQuote": true
  }
}
