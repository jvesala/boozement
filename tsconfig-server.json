{
  "compilerOptions": {
    "incremental": false,
    "alwaysStrict": true,
    "declaration": false,
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "outDir": "build/server/"
  },
  "baseUrl": "./src/server",
  "include": [
    "src/server"
  ]
}
